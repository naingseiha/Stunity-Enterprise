{
  "name": "stunity-enterprise",
  "version": "2.0.0",
  "private": true,
  "description": "Multi-tenant school management and social learning platform",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check",
    "seed:test-data": "tsx scripts/seed-complete-test-data.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "prisma": "^5.22.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.0",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "slugify": "^1.6.6",
    "uuid": "^13.0.0"
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.27.2"
  }
}
