{
  "expo": {
    "name": "Stunity",
    "slug": "stunity-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "stunity",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#F59E0B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stunity.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Stunity needs camera access to take photos for posts and profile pictures.",
        "NSPhotoLibraryUsageDescription": "Stunity needs photo library access to share photos in posts.",
        "NSMicrophoneUsageDescription": "Stunity needs microphone access to record videos.",
        "NSFaceIDUsageDescription": "Stunity uses Face ID for secure login."
      }
    },
    "android": {
      "package": "com.stunity.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Stunity to access your camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Stunity to access your photos."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  },
  "main": "index.js"
}
