{
  "expo": {
    "name": "Stunity",
    "slug": "stunity-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "stunity",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F59E0B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stunity.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Stunity needs camera access to take photos for posts and profile pictures.",
        "NSPhotoLibraryUsageDescription": "Stunity needs photo library access to share photos in posts.",
        "NSMicrophoneUsageDescription": "Stunity needs microphone access to record videos.",
        "NSFaceIDUsageDescription": "Stunity uses Face ID for secure login."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#F59E0B"
      },
      "package": "com.stunity.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-notifications",
        {
          "icon": "./src/assets/images/notification-icon.png",
          "color": "#F59E0B"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Stunity to access your camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Stunity to access your photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
